
public class Node implements Comparable<Node> {
	int freq;
	char word;
	String line;
	Node left;
	Node right;
	
	Node(){
		line="";
		left = null;
		right = null;
	};
	Node(char wd){
		freq = 1;
		word = wd;
		line="";
		left = null;
		right = null;
	}
	
	public int compareTo(Node e) {
		if(this.freq>e.freq){
			return 1;
		}else if(this.freq<e.freq){
			return -1;
		}else{
			return 0;
		}
	}

	public String toString(){
		String s;
		if(line.length()==0){
			s = "Word "+this.word+" Freq "+this.freq;
		}else{
			s = "Line "+this.line+" Freq "+this.freq;
		}
		return s;
	}
}
